									{{form_widget(modifprog.heurefin,  {'attr': {'style':'width:122px; position: relative; left: 310px; top: -138px;'}})}}<br>
									
									<label class="lastlabel" style="position: relative; color: #E5E5E5; text-transform: capitalize; font-size: 14px; left: 310px; top: -160px;
									 ">{{form_label(modifprog.heurefin)}}</label>

									 {{form_widget(modifprog.jour, {'attr': {'style':'width:240px; position: relative; left: 475px; top: -240px;'}})}}<br>
									
									<label class="firstlabel" style="position: relative; color: #E5E5E5; text-transform: capitalize; font-size: 14px; left: 475px; top: -263px;
									">{{form_label(modifprog.jour)}}</label>
								</div>
								<div id="name">
									<h2 class="named">Classe :</h2> 
								
									{{form_widget(modifprog.classeetudiant,  {'attr': {'style':'width:400px; position: relative; left: 160px; top: -38px;'}})}}<br>

									<label class="lastlabel" style="position: relative; color: #E5E5E5; text-transform: capitalize; font-size: 14px; left: 160px; top: -62px;
									 ">{{form_label(modifprog.classeetudiant)}}</label>
								</div>
								{#{form_widget(modifprog)}#}
								<div id="name">
									<h2 class="named">UE :</h2> 
									{{form_widget(modifprog.ue,  {'attr': {'style':'width:520px; position: relative; left: 160px; top: -38px;'}})}}<br>

									<label class="lastlabel" style="position: relative; color: #E5E5E5; text-transform: capitalize; font-size: 14px; left: 160px; top: -62px;
									 ">{{form_label(modifprog.ue)}}</label>
								</div>
								<div id="name">
									<h2 class="named" style="margin-left: 25px; margin-top: -25px; width: 125px; color: white; font-size: 18px; font-weight: 700; 
										">ECUE :</h2> 
									{{form_widget(modifprog.ecue,  {'attr': {'style':'width:520px; position: relative; left: 160px; top: -38px;'}})}}<br>

									<label class="lastlabel" style="position: relative; color: #E5E5E5; text-transform: capitalize; font-size: 14px; left: 160px; top: -62px;
									 ">{{form_label(modifprog.ecue)}}</label>
								</div> 
								
								<div id="name">
									<button data-blast="bgColor" type="submit" style="  height: 50px; display: flex; justify-content: center;  align-items: center; outline: none; color: white; cursor: pointer; transition: 0.25px;	
									width: 100px; position: relative; left: 300px; top: -50px; border-radius: 12px; border: 2px solid none;
									">Modifier</button>

									<!-- <button data-blast="bgColor" type="reset" style="  height: 50px; display: flex; justify-content: center;  align-items: center; outline: none; color: white; cursor: pointer; transition: 0.25px;	
									width: 70px; position: relative; left: 610px; top: -100px; border-radius: 12px; border: 2px solid none;
									">Annuler</button> -->

									<a href="{{path('paniers')}}" class="btn btn-primary" style="  height: 50px; display: flex; justify-content: center;  align-items: center; outline: none; color: white; cursor: pointer; transition: 0.25px;	
									width: 70px; position: relative; left: 25px; top: -100px; border-radius: 12px; border: 2px solid none;
									" >Retour</a>
								</div>
								

