<div class="slider">
	<div class="callbacks_container">
		<ul class="rslides" id="slider4">
			<li>
				<div class="slider-img one-img">
					<div class="bodyprog">
						<div class="main">
							<div class="title">Programmation de cours</div>
							<form method="POST">
								{{form_start(modifprog)}}

								<div id="name">
									<h2 class="name">Semaine :</h2>
									{{form_widget(modifprog.semainedeb, {'attr': {'style':'width:175px; position: relative; left: 160px; top: -37px;'}})}}<br>
									
									<label class="firstlabel" style="position: relative; color: #E5E5E5; text-transform: capitalize; font-size: 14px; left: 160px; top: -58px;
									">{{form_label(modifprog.semainedeb)}}</label>
									
									{{form_widget(modifprog.semainefin,  {'attr': {'style':'width:175px; position: relative; left: 475px; top: -138px;'}})}}<br>
									
									<label class="lastlabel" style="position: relative; color: #E5E5E5; text-transform: capitalize; font-size: 14px; left: 475px; top: -160px;
									 ">{{form_label(modifprog.semainefin)}}</label>
								</div>

								<div id="name">
									<h2 class="named">Heure&Jour:</h2>
									{{form_widget(modifprog.heuredeb, {'attr': {'style':'width:122px; position: relative; left: 160px; top: -37px;'}})}}<br>
									
									<label class="firstlabel" style="position: relative; color: #E5E5E5; text-transform: capitalize; font-size: 14px; left: 160px; top: -58px;
